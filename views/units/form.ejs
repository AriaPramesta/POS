<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Users</title>

    <%- include('../partials/core-style.ejs') %>

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <%- include('../partials/sidebar.ejs') %>

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">

                    <%- include('../partials/topbar.ejs') %>

                        <!-- Begin Page Content -->
                        <div class="container-fluid">

                            <!-- Page Heading -->
                            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                                <h1 class="h3 mb-0 text-gray-800">Units</h1>
                            </div>

                            <div class="card">
                                <div class="card-header d-flex">
                                    <strong class="text-primary">
                                        <%= item ? 'Form Edit' : 'Form Add' %>
                                    </strong>
                                </div>
                                <form method="post" action="<%= item ? " /units/edit/" + item.unit : "/units/add" %>">
                                    <div class="card-body">

                                        <div class="row mb-3">
                                            <label for="unit" class="col-sm-2 col-form-label">Unit</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" id="unit" name="unit"
                                                    value="<%= item ? item.unit : '' %>" <%=item ? 'readonly' : '' %>>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label for="name" class="col-sm-2 col-form-label">Name</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" id="name" name="name"
                                                    value="<%= item ? item.name : '' %>">
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label for="note" class="col-sm-2 col-form-label">Note</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" id="note" name="note"
                                                    value="<%= item ? item.note : '' %>">
                                            </div>
                                        </div>

                                    </div>
                                    <div class="card-footer">
                                        <button type="submit" role="button" class="btn btn-icon-split btn-primary">
                                            <span class="icon text-white-50">
                                                <i class="fa fa-database"></i>
                                            </span>
                                            <span class="text">Save</span>
                                        </button>
                                        <a href="/units" role="button" class="btn btn-icon-split btn-warning">
                                            <span class="icon text-white-50">
                                                <i class="fa fa-arrow-left"></i>
                                            </span>
                                            <span class="text">Back</span>
                                        </a>
                                    </div>
                                </form>
                            </div>


                        </div>

                </div>
                <!-- End of Content Wrapper -->

            </div>
            <!-- End of Page Wrapper -->

            <!-- Scroll to Top Button-->
            <a class="scroll-to-top rounded" href="#page-top">
                <i class="fas fa-angle-up"></i>
            </a>

            <%- include('../partials/logout-modal.ejs') %>

                <%- include('../partials/core-scripts.ejs') %>

</body>

</html>