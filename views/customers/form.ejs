<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Customers</title>

    <%- include('../partials/core-style.ejs') %>

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <%- include('../partials/sidebar.ejs') %>

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">

                    <%- include('../partials/topbar.ejs') %>

                        <!-- Begin Page Content -->
                        <div class="container-fluid">

                            <!-- Page Heading -->
                            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                                <h1 class="h3 mb-0 text-gray-800">Customers</h1>
                            </div>

                            <div class="card mb-5">
                                <div class="card-header d-flex">
                                    <strong class="text-primary">
                                        <%= customer ? 'Form Edit' : 'Form Add' %>
                                    </strong>
                                </div>
                                <form method="post"
                                    action="<%= customer ? '/customers/edit/' + customer.customerid : '/customers/add' %>"
                                    enctype="multipart/form-data">

                                    <div class="card-body">

                                        <div class="row mb-3">
                                            <label for="name" class="col-sm-2 col-form-label">Name</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" id="name" name="name"
                                                    value="<%= customer ? customer.name : '' %>">

                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label for="address" class="col-sm-2 col-form-label">Address</label>
                                            <div class="col-sm-10">
                                                <textarea class="form-control" id="address" name="address"
                                                    rows="3"><%= customer ? customer.address : '' %></textarea>
                                            </div>
                                        </div>

                                        <div class="row mb-3">
                                            <label for="phone" class="col-sm-2 col-form-label">Phone</label>
                                            <div class="col-sm-10 input-group">
                                                <span class="input-group-text">+62</span>
                                                <input type="text" class="form-control" id="phone" name="phone"
                                                    value="<%= customer ? customer.phone?.replace('+62', '') : '' %>"
                                                    oninput="validatePhoneInput(this)" maxlength="15">
                                            </div>
                                        </div>

                                    </div>
                                    <div class="card-footer">
                                        <button type="submit" role="button" class="btn btn-icon-split btn-primary">
                                            <span class="icon text-white-50">
                                                <i class="fa fa-database"></i>
                                            </span>
                                            <span class="text">Save</span>
                                        </button>
                                        <a href="/cusotmers" role="button" class="btn btn-icon-split btn-warning">
                                            <span class="icon text-white-50">
                                                <i class="fa fa-arrow-left"></i>
                                            </span>
                                            <span class="text">Back</span>
                                        </a>
                                    </div>
                                </form>
                            </div>


                        </div>

                </div>
                <!-- End of Content Wrapper -->

            </div>
            <!-- End of Page Wrapper -->

            <!-- Scroll to Top Button-->
            <a class="scroll-to-top rounded" href="#page-top">
                <i class="fas fa-angle-up"></i>
            </a>

            <%- include('../partials/logout-modal.ejs') %>

                <%- include('../partials/core-scripts.ejs') %>

                    <script>
                        function validatePhoneInput(input) {
                            // Ambil semua angka
                            let val = input.value.replace(/[^0-9]/g, '');

                            // Cek jika angka pertama adalah 0 â†’ hapus
                            if (val.startsWith('0')) {
                                val = val.slice(1); // buang angka 0 di depan
                            }

                            input.value = val;
                        }
                    </script>

</body>

</html>