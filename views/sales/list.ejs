<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Sales</title>

    <%- include('../partials/core-style.ejs') %>

        <style>
            th a {
                color: gray;
            }
        </style>

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <%- include('../partials/sidebar.ejs') %>

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">

                    <%- include('../partials/topbar.ejs') %>

                        <!-- Begin Page Content -->
                        <div class="container-fluid">

                            <!-- Page Heading -->
                            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                                <div>
                                    <h1 class="h3 mb-0 text-gray-800">Sales</h1>
                                    <p>This is data of Sales</p>
                                </div>
                            </div>

                            <div class="card">
                                <div class="card-header d-flex">
                                    <a href="/sales/add" role="button" class="btn btn-icon-split btn-primary">
                                        <span class="icon text-white-50">
                                            <i class="fa fa-plus"></i>
                                        </span>
                                        <span class="text">Add</span>
                                    </a>
                                </div>
                                <div class="card-body">
                                    <div>
                                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                            <thead>
                                                <tr>
                                                    <th>Invoice</th>
                                                    <th>Time</th>
                                                    <th>Total Summary</th>
                                                    <th>Pay</th>
                                                    <th>Change</th>
                                                    <th>Customer</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>

                                                <% sales.forEach(sale=> { %>
                                                    <tr>
                                                        <td>
                                                            <%= sale.invoice %>
                                                        </td>
                                                        <td>
                                                            <%= moment(sale.time).format('DD MMM YYYY HH:mm:ss') %>
                                                        </td>
                                                        <td>
                                                            <%= Number(sale.totalsum).toLocaleString('id-ID', {
                                                                style: 'currency' , currency: 'IDR' }) %>
                                                        </td>
                                                        <td>
                                                            <%= Number(sale.pay).toLocaleString('id-ID', {
                                                                style: 'currency' , currency: 'IDR' }) %>
                                                        </td>
                                                        <td>
                                                            <%= Number(sale.change).toLocaleString('id-ID', {
                                                                style: 'currency' , currency: 'IDR' }) %>
                                                        </td>
                                                        <td>
                                                            <%= sale.Customer.name %>
                                                        </td>
                                                        <td>
                                                            <a href="/sales/edit/<%= sale.invoice %>"
                                                                class="btn btn-circle btn-success">
                                                                <i class="fa fa-info-circle"></i>
                                                            </a>
                                                            <button class="btn btn-circle btn-danger"
                                                                data-toggle="modal" data-target="#deleteModal"
                                                                data-id="<%= sale.invoice %>">
                                                                <i class="fa fa-trash"></i>
                                                            </button>
                                                        </td>
                                                    </tr>
                                                    <% }); %>

                                            </tbody>
                                            <tfoot>
                                                <tr>
                                                    <th>Invoice</th>
                                                    <th>Time</th>
                                                    <th>Total Summary</th>
                                                    <th>Pay</th>
                                                    <th>Change</th>
                                                    <th>Customer</th>
                                                    <th>Action</th>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>

                </div>
                <!-- End of Content Wrapper -->

            </div>
            <!-- End of Page Wrapper -->

            <!-- Scroll to Top Button-->
            <a class="scroll-to-top rounded" href="#page-top">
                <i class="fas fa-angle-up"></i>
            </a>

            <%- include('../partials/logout-modal.ejs') %>
                <%- include('../partials/delete-modal.ejs') %>
                    <%- include('../partials/core-scripts.ejs') %>

                        <script>
                            $('#deleteModal').on('show.bs.modal', function (event) {
                                const button = $(event.relatedTarget);
                                const id = button.data('id');
                                $('#deleteForm').attr('action', '/sales/delete/' + id);
                            });
                        </script>
</body>

</html>