<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Sales</title>

    <%- include('../partials/core-style.ejs') %>

        <style>
            th a {
                color: gray;
            }
        </style>

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <%- include('../partials/sidebar.ejs') %>

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">

                    <%- include('../partials/topbar.ejs') %>

                        <!-- Begin Page Content -->
                        <div class="container-fluid">

                            <!-- Page Heading -->
                            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                                <div>
                                    <h1 class="h3 mb-0 text-gray-800">Sales</h1>
                                    <p>This is data of Sales</p>
                                </div>
                            </div>

                            <div class="card">
                                <div class="card-header d-flex">
                                    <a href="/sales/add" role="button" class="btn btn-icon-split btn-primary">
                                        <span class="icon text-white-50">
                                            <i class="fa fa-plus"></i>
                                        </span>
                                        <span class="text">Add</span>
                                    </a>
                                </div>
                                <div class="card-body">

                                    <form id="filterForm" method="GET" action="/sales">
                                        <div class="mb-3 d-flex justify-content-between align-items-center">
                                            <div class="d-flex align-items-center">
                                                <label class="mb-0 me-2">
                                                    Show
                                                    <select name="limit"
                                                        class="form-select form-select-sm w-auto me-2 border border-light-subtle"
                                                        onchange="document.getElementById('filterForm').submit()">
                                                        <option value="3" <%=limit==3 ? 'selected' : '' %>>3</option>
                                                        <option value="10" <%=limit==10 ? 'selected' : '' %>>10</option>
                                                        <option value="100" <%=limit==100 ? 'selected' : '' %>>100
                                                        </option>
                                                    </select>
                                                    Entries
                                                </label>
                                                <input type="hidden" name="sortBy" value="<%= sortBy %>">
                                                <input type="hidden" name="sortMode" value="<%= sortMode %>">
                                            </div>

                                            <div class="d-flex align-items-center">
                                                <label for="search" class="mb-0 me-2">Search:</label>
                                                <input type="text" id="search" name="search"
                                                    class="form-control form-control-sm" style="max-width: 200px;"
                                                    value="<%= search || '' %>"
                                                    onkeypress="if(event.key === 'Enter'){document.getElementById('filterForm').submit();}">
                                            </div>
                                        </div>
                                    </form>

                                    <div>
                                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        <a
                                                            href="<%= baseUrl.replace(`sortBy=${sortBy}`, `sortBy=invoice`).replace(`sortMode=${sortMode}`, `sortMode=${sortMode === 'ASC' ? 'DESC' : 'ASC'}`) %>">
                                                            Invoice
                                                            <i
                                                                class="fa fa-<%= sortBy === 'invoice' ? (sortMode === 'ASC' ? 'sort-up' : 'sort-down') : 'sort' %>"></i>
                                                        </a>
                                                    </th>
                                                    <th>
                                                        <a
                                                            href="<%= baseUrl.replace(`sortBy=${sortBy}`, `sortBy=time`).replace(`sortMode=${sortMode}`, `sortMode=${sortMode === 'ASC' ? 'DESC' : 'ASC'}`) %>">
                                                            Time
                                                            <i
                                                                class="fa fa-<%= sortBy === 'time' ? (sortMode === 'ASC' ? 'sort-up' : 'sort-down') : 'sort' %>"></i>
                                                        </a>
                                                    </th>
                                                    <th>
                                                        <a
                                                            href="<%= baseUrl.replace(`sortBy=${sortBy}`, `sortBy=totalsum`).replace(`sortMode=${sortMode}`, `sortMode=${sortMode === 'ASC' ? 'DESC' : 'ASC'}`) %>">
                                                            Total Summary
                                                            <i
                                                                class="fa fa-<%= sortBy === 'totalsum' ? (sortMode === 'ASC' ? 'sort-up' : 'sort-down') : 'sort' %>"></i>
                                                        </a>
                                                    </th>
                                                    <th>
                                                        <a
                                                            href="<%= baseUrl.replace(`sortBy=${sortBy}`, `sortBy=pay`).replace(`sortMode=${sortMode}`, `sortMode=${sortMode === 'ASC' ? 'DESC' : 'ASC'}`) %>">
                                                            Pay
                                                            <i
                                                                class="fa fa-<%= sortBy === 'pay' ? (sortMode === 'ASC' ? 'sort-up' : 'sort-down') : 'sort' %>"></i>
                                                        </a>
                                                    </th>
                                                    <th>
                                                        <a
                                                            href="<%= baseUrl.replace(`sortBy=${sortBy}`, `sortBy=change`).replace(`sortMode=${sortMode}`, `sortMode=${sortMode === 'ASC' ? 'DESC' : 'ASC'}`) %>">
                                                            Change
                                                            <i
                                                                class="fa fa-<%= sortBy === 'change' ? (sortMode === 'ASC' ? 'sort-up' : 'sort-down') : 'sort' %>"></i>
                                                        </a>
                                                    </th>
                                                    <th>
                                                        <a
                                                            href="<%= baseUrl.replace(`sortBy=${sortBy}`, `sortBy=customer`).replace(`sortMode=${sortMode}`, `sortMode=${sortMode === 'ASC' ? 'DESC' : 'ASC'}`) %>">
                                                            Customer
                                                            <i
                                                                class="fa fa-<%= sortBy === 'customer' ? (sortMode === 'ASC' ? 'sort-up' : 'sort-down') : 'sort' %>"></i>
                                                        </a>
                                                    </th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>

                                                <% sales.forEach(sale=> { %>
                                                    <tr>
                                                        <td>
                                                            <%= sale.invoice %>
                                                        </td>
                                                        <td>
                                                            <%= moment(sale.time).format('DD MMM YYYY HH:mm:ss') %>
                                                        </td>
                                                        <td>
                                                            <%= Number(sale.totalsum).toLocaleString('id-ID', {
                                                                style: 'currency' , currency: 'IDR' }) %>
                                                        </td>
                                                        <td>
                                                            <%= Number(sale.pay).toLocaleString('id-ID', {
                                                                style: 'currency' , currency: 'IDR' }) %>
                                                        </td>
                                                        <td>
                                                            <%= Number(sale.change).toLocaleString('id-ID', {
                                                                style: 'currency' , currency: 'IDR' }) %>
                                                        </td>
                                                        <td>
                                                            <%= sale.Customer.name %>
                                                        </td>
                                                        <td>
                                                            <a href="/sales/edit/<%= sale.invoice %>"
                                                                class="btn btn-circle btn-success">
                                                                <i class="fa fa-info-circle"></i>
                                                            </a>
                                                            <button class="btn btn-circle btn-danger"
                                                                data-toggle="modal" data-target="#deleteModal"
                                                                data-id="<%= sale.invoice %>">
                                                                <i class="fa fa-trash"></i>
                                                            </button>
                                                        </td>
                                                    </tr>
                                                    <% }); %>

                                            </tbody>
                                            <tfoot>
                                                <tr>
                                                    <th>Invoice</th>
                                                    <th>Time</th>
                                                    <th>Total Summary</th>
                                                    <th>Pay</th>
                                                    <th>Change</th>
                                                    <th>Customer</th>
                                                    <th>Action</th>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            Showing <%= offset + 1 %> to <%= offset + sales.length %> of <%=
                                                        totalSales%>
                                                        Entries
                                        </div>
                                        <div>
                                            <nav aria-label="Page navigation example">
                                                <ul class="pagination">
                                                    <% if (currentPage> 1) { %>
                                                        <li class="page-item">
                                                            <a class="page-link"
                                                                href="<%= baseUrl %>&page=<%= currentPage - 1 %>"
                                                                aria-label="Previous">
                                                                <span aria-hidden="true">Previous</span>
                                                            </a>
                                                        </li>
                                                        <% } %>

                                                            <% for (let i=1; i <=pages; i++) { %>
                                                                <li
                                                                    class="page-item <%= currentPage == i ? 'active' : '' %>">
                                                                    <a class="page-link"
                                                                        href="<%= baseUrl %>&page=<%= i %>">
                                                                        <%= i %>
                                                                    </a>
                                                                </li>
                                                                <% } %>

                                                                    <% if (currentPage < pages) { %>
                                                                        <li class="page-item">
                                                                            <a class="page-link"
                                                                                href="<%= baseUrl %>&page=<%= currentPage + 1 %>"
                                                                                aria-label="Next">
                                                                                <span aria-hidden="true">Next</span>
                                                                            </a>
                                                                        </li>
                                                                        <% } %>
                                            </nav>
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </div>

                </div>
                <!-- End of Content Wrapper -->

            </div>
            <!-- End of Page Wrapper -->

            <!-- Scroll to Top Button-->
            <a class="scroll-to-top rounded" href="#page-top">
                <i class="fas fa-angle-up"></i>
            </a>

            <%- include('../partials/logout-modal.ejs') %>
                <%- include('../partials/delete-modal.ejs') %>
                    <%- include('../partials/core-scripts.ejs') %>

                        <script>
                            $('#deleteModal').on('show.bs.modal', function (event) {
                                const button = $(event.relatedTarget);
                                const id = button.data('id');
                                $('#deleteForm').attr('action', '/sales/delete/' + id);
                            });
                        </script>
</body>

</html>