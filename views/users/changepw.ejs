<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Change Password</title>

    <%- include('../partials/core-style.ejs') %>

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <%- include('../partials/sidebar.ejs') %>

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">

                    <%- include('../partials/topbar.ejs') %>

                        <!-- Begin Page Content -->
                        <div class="container-fluid">

                            <%- include('../partials/alert.ejs') %>

                                <!-- Page Heading -->
                                <div class="d-sm-flex align-items-center justify-content-between mb-4">
                                    <h1 class="h3 mb-0 text-gray-800">Change Passwords</h1>
                                </div>

                                <form method="post" action="/users/changepassword">
                                    <div class="card">
                                        <div class="card-header d-flex">
                                            <strong class="text-primary">
                                                Change Your Password
                                            </strong>
                                        </div>
                                        <div class="card-body">
                                            <div class="row mb-3">
                                                <label for="oldpw" class="col-sm-2 col-form-label">Old Password</label>
                                                <div class="col-sm-10">
                                                    <input type="password" class="form-control" id="oldpw" name="oldpw">
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <label for="newpw" class="col-sm-2 col-form-label">New Password</label>
                                                <div class="col-sm-10">
                                                    <input type="password" class="form-control" id="newpw" name="newpw">
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <label for="repw" class="col-sm-2 col-form-label">Retype
                                                    Password</label>
                                                <div class="col-sm-10">
                                                    <input type="password" class="form-control" id="repw" name="repw">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-footer">
                                            <button type="submit" role="button" class="btn btn-icon-split btn-success">
                                                <span class="icon text-white-50">
                                                    <i class="fa fa-database"></i>
                                                </span>
                                                <span class="text">Update</span>
                                            </button>
                                        </div>
                                </form>
                        </div>

                </div>
                <!-- End of Content Wrapper -->

            </div>
            <!-- End of Page Wrapper -->

            <!-- Scroll to Top Button-->
            <a class="scroll-to-top rounded" href="#page-top">
                <i class="fas fa-angle-up"></i>
            </a>

            <%- include('../partials/logout-modal.ejs') %>

                <%- include('../partials/core-scripts.ejs') %>

</body>

</html>