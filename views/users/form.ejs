<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Users</title>

    <%- include('../partials/core-style.ejs') %>

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <%- include('../partials/sidebar.ejs') %>

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">

                    <%- include('../partials/topbar.ejs') %>

                        <!-- Begin Page Content -->
                        <div class="container-fluid">

                            <!-- Page Heading -->
                            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                                <h1 class="h3 mb-0 text-gray-800">Users</h1>
                            </div>

                            <div class="card">
                                <div class="card-header d-flex">
                                    <strong class="text-primary">
                                        <%= item ? 'Form Edit' : 'Form Add' %>
                                    </strong>
                                </div>
                                <form method="post" action="<%= item ? " /users/edit/" + item.id : "/users/add" %>">
                                    <div class="card-body">

                                        <div class="row mb-3">
                                            <label for="email" class="col-sm-2 col-form-label">Email</label>
                                            <div class="col-sm-10">
                                                <input type="email" class="form-control" id="email" name="email"
                                                    value="<%= item ? item.email : '' %>">
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label for="name" class="col-sm-2 col-form-label">Name</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" id="name" name="name"
                                                    value="<%= item ? item.name : '' %>">
                                            </div>
                                        </div>

                                        <% if (!item) { %>
                                            <div class="row mb-3">
                                                <label for="password" class="col-sm-2 col-form-label">Password</label>
                                                <div class="col-sm-10">
                                                    <input type="password" class="form-control" id="password"
                                                        name="password">
                                                </div>
                                            </div>
                                            <% } %>

                                                <div class="row mb-3">
                                                    <span class="col-sm-2 col-form-label">Role</span>
                                                    <div class="col-sm-10">
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="radio" name="role"
                                                                id="operator" value="operator" <%=item &&
                                                                item.role=='operator' ? 'checked' : '' %>>
                                                            <label class="form-check-label" for="operator">
                                                                Operator
                                                            </label>
                                                        </div>
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="radio" name="role"
                                                                id="admin" value="admin" <%=item && item.role=='admin'
                                                                ? 'checked' : '' %>>
                                                            <label class="form-check-label" for="admin">
                                                                Admin
                                                            </label>
                                                        </div>
                                                    </div>
                                                </div>

                                    </div>
                                    <div class="card-footer">
                                        <button type="submit" role="button" class="btn btn-icon-split btn-primary">
                                            <span class="icon text-white-50">
                                                <i class="fa fa-database"></i>
                                            </span>
                                            <span class="text">Save</span>
                                        </button>
                                        <a href="/users" role="button" class="btn btn-icon-split btn-warning">
                                            <span class="icon text-white-50">
                                                <i class="fa fa-arrow-left"></i>
                                            </span>
                                            <span class="text">Back</span>
                                        </a>
                                    </div>
                                </form>
                            </div>


                        </div>

                </div>
                <!-- End of Content Wrapper -->

            </div>
            <!-- End of Page Wrapper -->

            <!-- Scroll to Top Button-->
            <a class="scroll-to-top rounded" href="#page-top">
                <i class="fas fa-angle-up"></i>
            </a>

            <%- include('../partials/logout-modal.ejs') %>

                <%- include('../partials/core-scripts.ejs') %>

</body>

</html>