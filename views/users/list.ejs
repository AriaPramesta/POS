<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Users</title>

    <%- include('../partials/core-style.ejs') %>

        <style>
            th a {
                color: gray;
            }
        </style>

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <%- include('../partials/sidebar.ejs') %>

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">

                    <%- include('../partials/topbar.ejs') %>

                        <!-- Begin Page Content -->
                        <div class="container-fluid">

                            <!-- Page Heading -->
                            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                                <h1 class="h3 mb-0 text-gray-800">Users</h1>
                            </div>

                            <div class="card">
                                <div class="card-header d-flex">
                                    <a href="/users/add" role="button" class="btn btn-icon-split btn-primary">
                                        <span class="icon text-white-50">
                                            <i class="fa fa-plus"></i>
                                        </span>
                                        <span class="text">Add</span>
                                    </a>
                                </div>
                                <div class="card-body">

                                    <form id="filterForm" method="GET" action="/users">
                                        <div class="mb-3 d-flex justify-content-between align-items-center">
                                            <div class="d-flex align-items-center">
                                                <label class="mb-0 me-2">
                                                    Show
                                                    <select name="limit"
                                                        class="form-select form-select-sm w-auto me-2 border border-light-subtle"
                                                        onchange="document.getElementById('filterForm').submit()">
                                                        <option value="3" <%=limit==3 ? 'selected' : '' %>>3</option>
                                                        <option value="10" <%=limit==10 ? 'selected' : '' %>>10</option>
                                                        <option value="100" <%=limit==100 ? 'selected' : '' %>>100
                                                        </option>
                                                    </select>
                                                    Entries
                                                </label>
                                                <input type="hidden" name="sortBy" value="<%= sortBy %>">
                                                <input type="hidden" name="sortMode" value="<%= sortMode %>">
                                            </div>

                                            <div class="d-flex align-items-center">
                                                <label for="search" class="mb-0 me-2">Search:</label>
                                                <input type="text" id="search" name="search"
                                                    class="form-control form-control-sm" style="max-width: 200px;"
                                                    value="<%= search || '' %>"
                                                    onkeypress="if(event.key === 'Enter'){document.getElementById('filterForm').submit();}">
                                            </div>
                                        </div>
                                    </form>


                                    <div>
                                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        <a
                                                            href="<%= baseUrl.replace(`sortBy=${sortBy}`, `sortBy=id`).replace(`sortMode=${sortMode}`, `sortMode=${sortMode === 'ASC' ? 'DESC' : 'ASC'}`) %>">
                                                            User ID
                                                            <i
                                                                class="fa fa-<%= sortBy === 'id' ? (sortMode === 'ASC' ? 'sort-up' : 'sort-down') : 'sort' %>"></i>
                                                        </a>
                                                    </th>
                                                    <th>
                                                        <a
                                                            href="<%= baseUrl.replace(`sortBy=${sortBy}`, `sortBy=email`).replace(`sortMode=${sortMode}`, `sortMode=${sortMode === 'ASC' ? 'DESC' : 'ASC'}`) %>">
                                                            Email
                                                            <i
                                                                class="fa fa-<%= sortBy === 'email' ? (sortMode === 'ASC' ? 'sort-up' : 'sort-down') : 'sort' %>"></i>
                                                        </a>
                                                    </th>
                                                    <th>
                                                        <a
                                                            href="<%= baseUrl.replace(`sortBy=${sortBy}`, `sortBy=name`).replace(`sortMode=${sortMode}`, `sortMode=${sortMode === 'ASC' ? 'DESC' : 'ASC'}`) %>">
                                                            Name
                                                            <i
                                                                class="fa fa-<%= sortBy === 'name' ? (sortMode === 'ASC' ? 'sort-up' : 'sort-down') : 'sort' %>"></i>
                                                        </a>
                                                    </th>

                                                    <th>Role</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% data.forEach((item, index)=> { %>
                                                    <tr>
                                                        <td>
                                                            <%= index + offset + 1 %>
                                                        </td>
                                                        <td>
                                                            <%= item.email %>
                                                        </td>
                                                        <td>
                                                            <%= item.name %>
                                                        </td>
                                                        <td>
                                                            <%= item.role %>
                                                        </td>
                                                        <td>
                                                            <a href="/users/edit/<%= item.id %>"
                                                                class="btn btn-circle btn-success">
                                                                <i class="fa fa-info-circle"></i>
                                                            </a>
                                                            <button class="btn btn-circle btn-danger"
                                                                data-toggle="modal" data-target="#deleteModal"
                                                                data-id="<%= item.id %>">
                                                                <i class="fa fa-trash"></i>
                                                            </button>



                                                        </td>
                                                    </tr>
                                                    <% }); %>
                                            </tbody>
                                            <tfoot>
                                                <tr>
                                                    <th>User ID</th>
                                                    <th>Email</th>
                                                    <th>Name</th>
                                                    <th>Role</th>
                                                    <th>Action</th>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>

                                    <div class="d-flex justify-content-between">
                                        <div>
                                            Showing <%= offset + 1 %> to <%= offset + data.length %> of <%= totalUsers%>
                                                        Entries
                                        </div>
                                        <div>
                                            <nav aria-label="Page navigation example">
                                                <ul class="pagination">
                                                    <% if (currentPage> 1) { %>
                                                        <li class="page-item">
                                                            <a class="page-link"
                                                                href="<%= baseUrl %>&page=<%= currentPage - 1 %>"
                                                                aria-label="Previous">
                                                                <span aria-hidden="true">Previous</span>
                                                            </a>
                                                        </li>
                                                        <% } %>

                                                            <% for (let i=1; i <=pages; i++) { %>
                                                                <li
                                                                    class="page-item <%= currentPage == i ? 'active' : '' %>">
                                                                    <a class="page-link"
                                                                        href="<%= baseUrl %>&page=<%= i %>">
                                                                        <%= i %>
                                                                    </a>
                                                                </li>
                                                                <% } %>

                                                                    <% if (currentPage < pages) { %>
                                                                        <li class="page-item">
                                                                            <a class="page-link"
                                                                                href="<%= baseUrl %>&page=<%= currentPage + 1 %>"
                                                                                aria-label="Next">
                                                                                <span aria-hidden="true">Next</span>
                                                                            </a>
                                                                        </li>
                                                                        <% } %>

                                                </ul>
                                            </nav>
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </div>

                </div>
                <!-- End of Content Wrapper -->

            </div>
            <!-- End of Page Wrapper -->

            <!-- Scroll to Top Button-->
            <a class="scroll-to-top rounded" href="#page-top">
                <i class="fas fa-angle-up"></i>
            </a>

            <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <form id="deleteForm" method="POST" action="">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="deleteModalLabel">Delete Confirmation</h5>
                            </div>
                            <div class="modal-body">
                                Are you sure, you want to delete it?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                                <button type="submit" class="btn btn-primary">Yes</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <%- include('../partials/logout-modal.ejs') %>

                <%- include('../partials/core-scripts.ejs') %>

                    <script>
                        $('#deleteModal').on('show.bs.modal', function (event) {
                            const button = $(event.relatedTarget);
                            const id = button.data('id');
                            $('#deleteForm').attr('action', '/users/delete/' + id);
                        });
                    </script>


</body>

</html>