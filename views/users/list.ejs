<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Users</title>

    <%- include('../partials/core-style.ejs') %>

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <%- include('../partials/sidebar.ejs') %>

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">

                    <%- include('../partials/topbar.ejs') %>

                        <!-- Begin Page Content -->
                        <div class="container-fluid">

                            <!-- Page Heading -->
                            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                                <h1 class="h3 mb-0 text-gray-800">Users</h1>
                            </div>

                            <div class="card">
                                <div class="card-header d-flex">
                                    <a href="/users/add" role="button" class="btn btn-icon-split btn-primary">
                                        <span class="icon text-white-50">
                                            <i class="fa fa-plus"></i>
                                        </span>
                                        <span class="text">Add</span>
                                    </a>
                                </div>
                                <div class="card-body">

                                    <div class="mb-3 d-flex justify-content-between align-items-center">
                                        <div class="d-flex align-items-center">
                                            <label class="mb-0 me-2">
                                                Show
                                                <select
                                                    class="form-select form-select-sm w-auto me-2 border border-light-subtle">
                                                    <option value="3">3</option>
                                                    <option value="10">10</option>
                                                    <option value="100">100</option>
                                                </select>
                                                Entries
                                            </label>
                                        </div>

                                        <div class="d-flex align-items-center">
                                            <label class="mb-0">Search:</label>
                                            <input type="text" class="form-control form-control-sm" placeholder=""
                                                aria-controls="dataTable" style="max-width: 200px;">
                                        </div>
                                    </div>

                                    <div>
                                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                            <thead>
                                                <tr>
                                                    <th>User ID</th>
                                                    <th>Email</th>
                                                    <th>Name</th>
                                                    <th>Role</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% data.forEach((item, index)=> { %>
                                                    <tr>
                                                        <td>
                                                            <%= index + 1 %>
                                                        </td>
                                                        <td>
                                                            <%= item.email %>
                                                        </td>
                                                        <td>
                                                            <%= item.name %>
                                                        </td>
                                                        <td>
                                                            <%= item.role %>
                                                        </td>
                                                        <td>
                                                            <a href="/users/edit/<%= item.id %>"
                                                                class="btn btn-circle btn-success">
                                                                <i class="fa fa-info-circle"></i>
                                                            </a>
                                                            <button class="btn btn-circle btn-danger"
                                                                data-toggle="modal" data-target="#deleteModal"
                                                                data-id="<%= item.id %>">
                                                                <i class="fa fa-trash"></i>
                                                            </button>



                                                        </td>
                                                    </tr>
                                                    <% }); %>
                                            </tbody>
                                            <tfoot>
                                                <tr>
                                                    <th>User ID</th>
                                                    <th>Email</th>
                                                    <th>Name</th>
                                                    <th>Role</th>
                                                    <th>Action</th>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>

                                    <div class="d-flex justify-content-between">
                                        <div>Showing 1 to 3 of 4 entries</div>
                                        <div>
                                            <nav aria-label="Page navigation example">
                                                <ul class="pagination">
                                                    <li class="page-item"><a class="page-link" href="#">Previous</a>
                                                    </li>
                                                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                                                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                                                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                                                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                                                </ul>
                                            </nav>
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </div>

                </div>
                <!-- End of Content Wrapper -->

            </div>
            <!-- End of Page Wrapper -->

            <!-- Scroll to Top Button-->
            <a class="scroll-to-top rounded" href="#page-top">
                <i class="fas fa-angle-up"></i>
            </a>

            <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <form id="deleteForm" method="POST" action="">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="deleteModalLabel">Delete Confirmation</h5>
                            </div>
                            <div class="modal-body">
                                Are you sure, you want to delete it?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                                <button type="submit" class="btn btn-primary">Yes</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <%- include('../partials/logout-modal.ejs') %>

                <%- include('../partials/core-scripts.ejs') %>

                    <script>
                        $('#deleteModal').on('show.bs.modal', function (event) {
                            const button = $(event.relatedTarget);
                            const id = button.data('id');
                            $('#deleteForm').attr('action', '/users/delete/' + id);
                        });
                    </script>


</body>

</html>